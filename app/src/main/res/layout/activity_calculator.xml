<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.artem.calculator.Calculator">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/input"
                android:background="#ffffff"
                android:textSize="16sp"
                android:maxLines="2"
                android:layout_weight="1.75"
                android:gravity="center_vertical|right" />

          <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/output"
                android:background="#ffffff"
                android:textSize="20sp"
                android:paddingStart="5sp"
                android:paddingEnd="5sp"
                android:maxLines="3"
                android:layout_weight="1"
              android:gravity="right"
              android:paddingBottom="2dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="4dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Clear"
                android:id="@+id/clear"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/eulers_number"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp"
                android:text="e" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/exponent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#2196f3"
                android:text="xⁿ" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/squareroot"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp"
                android:text="√" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/log"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#2196f3"
                android:text="Log" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="("
                android:id="@+id/left_bracket"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="4dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/absolute_value"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp"
                android:text="|x|" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/pi"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp"
                android:text="π" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/power_two"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#2196f3"
                android:text="x²" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/cuberoot"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp"
                android:text="³√x " />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/natural_log"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#2196f3"
                android:text="Ln" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text=")"
                android:id="@+id/right_bracket"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="4dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="%"
                android:id="@+id/percent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="sin"
                android:id="@+id/sin"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="7"
                android:id="@+id/seven"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#2196f3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="4"
                android:id="@+id/four"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1"
                android:id="@+id/one"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#2196f3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="0"
                android:id="@+id/zero"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="4dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="del"
                android:id="@+id/delete"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="cos"
                android:id="@+id/cos"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="8"
                android:id="@+id/eight"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#2196f3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="5"
                android:id="@+id/five"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="2"
                android:id="@+id/two"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#2196f3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="."
                android:id="@+id/decimal"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="4dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1 / X"
                android:id="@+id/one_over"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="tan"
                android:id="@+id/tan"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="9"
                android:id="@+id/nine"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#2196f3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="6"
                android:id="@+id/six"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="3"
                android:id="@+id/three"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#2196f3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="- / +"
                android:id="@+id/negative"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="4dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="/"
                android:id="@+id/divide"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="*"
                android:id="@+id/multiply"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="−"
                android:id="@+id/subtract"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#2196f3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="+"
                android:id="@+id/add"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#2196f3"
                android:layout_margin="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="="
                android:id="@+id/equal"
                android:layout_gravity="bottom"
                android:layout_weight="2.05"
                android:background="#2196f3"
                android:layout_margin="2dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
